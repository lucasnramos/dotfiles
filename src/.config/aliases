alias pacrm='sudo pacman -Rus'
# Navigation
alias ll='ls -lsA'
alias la='ls -A'
alias l='ls -CF'
alias gdot='cd $HOME/dotfiles'
alias conf='$SCRIPTS/term-dotfiles'
alias gdoc='cd $HOME/Documents'
alias gscr='cd $SCRIPTS'
alias gh='cd $HOME'
# vim & neovim
alias v='vim'
alias vim='nvim'
alias valias='vim $ALIASES'
alias vprofile='vim ~/.profile'
alias vsuck='vim ~/.local/suckless'
# cd to projects folder
alias proj='cd ~/Projects'
# FZY
alias vf='vim $(find -type f -not -path "*/\.git/*" | fzy)'
alias cdf='cd $(find -type d -not -path "*/\.git/*" | fzy)'
