#!/bin/bash
OPT=$(echo -e "Lock\nExit\nSuspend\nReboot" | dmenu -i -p "i3exit")

# Performs exit options
case "$OPT" in
    Lock)
        # blurlock
        i3lock-fancy
        ;;
    Exit)
        i3-msg exit
        ;;
    Suspend)
        i3lock-fancy && systemctl suspend
        ;;
    Reboot)
        reboot
        ;;
    *)
        echo "Usage: $0 {lock|logout|suspend|hibernate|reboot|shutdown}"
        exit 2
esac
exit 0

